<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/operands"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="end"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_gravity="end"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:maxLines="1"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="60sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                style="@style/button"
                android:text="C"
                android:textColor="#D50000"
                android:onClick="clrscr"/>

            <Button
                style="@style/button"
                android:text="()"
                android:textColor="#FB8C00"
                android:onClick="bracket"/>

            <Button
                style="@style/button"
                android:text="^"
                android:textColor="#FB8C00"
                android:onClick="power"/>

            <Button
                style="@style/button"
                android:text="/"
                android:textColor="#FB8C00"
                android:onClick="divide"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                style="@style/button"
                android:text="7"
                android:textColor="@android:color/white"
                android:onClick="button_seven"/>

            <Button
                style="@style/button"
                android:text="8"
                android:textColor="@android:color/white"
                android:onClick="button_eight"/>

            <Button
                style="@style/button"
                android:text="9"
                android:textColor="@android:color/white"
                android:onClick="button_nine"/>

            <Button
                style="@style/button"
                android:text="x"
                android:textColor="#FB8C00"
                android:onClick="multiply"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                style="@style/button"
                android:text="4"
                android:textColor="@android:color/white"
                android:onClick="button_four"/>

            <Button
                style="@style/button"
                android:text="5"
                android:textColor="@android:color/white"
                android:onClick="button_five"/>

            <Button
                style="@style/button"
                android:text="6"
                android:textColor="@android:color/white"
                android:onClick="button_six"/>

            <Button
                style="@style/button"
                android:text="-"
                android:textColor="#FB8C00"
                android:onClick="subtract"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                style="@style/button"
                android:text="1"
                android:textColor="@android:color/white"
                android:onClick="button_one"/>

            <Button
                style="@style/button"
                android:text="2"
                android:textColor="@android:color/white"
                android:onClick="button_two"/>

            <Button
                style="@style/button"
                android:text="3"
                android:textColor="@android:color/white"
                android:onClick="button_three"/>

            <Button
                style="@style/button"
                android:text="+"
                android:textColor="#FB8C00"
                android:onClick="add"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                style="@style/button"
                android:text="."
                android:textColor="@android:color/white"
                android:onClick="decimal"/>

            <Button
                style="@style/button"
                android:text="0"
                android:textColor="@android:color/white"
                android:onClick="button_zero"/>

            <Button
                style="@style/button"
                android:layout_weight="2"
                android:text="="
                android:textColor="#FB8C00"
                android:onClick="equal"/>

        </LinearLayout>


    </LinearLayout>
    >


</LinearLayout>